<UserControl 
    x:Class="FunTextUI.Views.TranslateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:FunTextUI.Views"
    xmlns:vm="clr-namespace:FunTextUI.ViewModels"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance Type=vm:TranslateViewModel}">
    
    <Grid
        Margin="5">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
            Margin="10">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock
                    Text="Translator"/>
                <ComboBox
                    ItemsSource="{Binding Translators}"
                    SelectedItem="{Binding SelectedTranslator}"
                    DisplayMemberPath="Name"/>
            </StackPanel>

            <Grid
                Grid.Row="1"
                Margin="0,5">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <TextBlock
                    Text="Search Text"/>
                <TextBox
                    Grid.Row="1"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    AcceptsReturn="True"
                    />
            </Grid>
            
            <Button
                Grid.Row="2"
                Margin="10"
                Content="Search"
                Command="{Binding GetTranslationCommand}"/>

        </Grid>

        <Grid
            Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="Translated Text"/>

            <TextBox
                Grid.Row="2"
                Text="{Binding TranslatedText}"
                IsReadOnly="True"/>

        </Grid>
        
    </Grid>
</UserControl>
